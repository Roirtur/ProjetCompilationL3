// Exemple d'utilisation de WHILE, Pow2, MapBinop, ++ et -- de l'extension 3.5
$<
    List(Int) : l;

    Set(l, [2, 8, 0]);
    
    MapBinop(l+3);
    Print(l);

    Int : x;
    Real : y;
    Set(x, 2);
    Set(y, 3.3);
    Set(x, Pow2(x));
    Set(y, Pow2(y));
    Print(x);
    Print(y);

    While ( x <> 0 )
    $<
        x--;
        y++;
        Print(x);
        Print(y);
    >$
    
>$
